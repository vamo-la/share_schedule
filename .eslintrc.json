{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:import/warnings",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
      ],
    "rules": {
        "prettier/prettier": "error",
        "import/order": [
            "warn",
            {
                "alphabetize": { "order": "asc" },
                "newlines-between": "always"
            }
        ]
    }
}